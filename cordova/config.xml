<?xml version='1.0' encoding='utf-8'?>
<widget id="com.cmi.faceguardian" version="0.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Face Guardian</name>
    <description>
        Use your phone's compass and a magnet on your wrist to detect face touching.
    </description>
    <author email="curt.white@childmind.org" href="https://github.com/curtpw">
        Curt White
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="EnableViewportScale" value="true" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="19" />
        <allow-intent href="market:*" />
        <icon density="ldpi" src="config/icons/icon-36.png" />
        <icon density="mdpi" src="config/icons/icon-48.png" />
        <icon density="hdpi" src="config/icons/icon-72.png" />
        <icon density="xhdpi" src="config/icons/icon-96.png" />
        <preference name="AndroidLaunchMode" value="singleTask" />
        <preference name="android-targetSdkVersion" value="28" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-device-motion" spec="^2.0.1" />
    <plugin name="cordova-plugin-magnetometer" spec="^1.0.0" />
    <engine name="android" spec="^8.0.0" />
</widget>
